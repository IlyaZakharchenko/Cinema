<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="180dp"
        android:layout_height="256dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/movie_poster_content_descr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/harry_potter_poster" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/Text.Large.Title"
        app:layout_constraintEnd_toEndOf="@id/ivPoster"
        app:layout_constraintStart_toStartOf="@id/ivPoster"
        app:layout_constraintTop_toBottomOf="@id/ivPoster"
        tools:text="Harry Potter and the Philosopher's Stone" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/ic_rating_rect"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/Text.Small.Title.Inverse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9.8" />

    <TextView
        android:id="@+id/tvGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/Text.Medium.Secondary"
        app:layout_constraintEnd_toEndOf="@id/ivPoster"
        app:layout_constraintStart_toStartOf="@id/ivPoster"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="Harry Potter and the Philosopher's Stone">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>